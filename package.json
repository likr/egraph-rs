{
  "name": "egraph",
  "author": "Yosuke Onoue <onoue@likr-lab.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run wasm-build",
    "start": "lerna exec --scope examples -- npm start",
    "prebootstrap": "npm run wasm-build",
    "bootstrap": "lerna bootstrap",
    "wasm-build": "npm run wasm-build:browser && npm run wasm-build:no-modules && npm run wasm-build:nodejs && npm run wasm-build:web",
    "wasm-build:browser": "wasm-pack build --target browser -d dist/browser crates/wasm",
    "wasm-build:no-modules": "wasm-pack build --target no-modules -d dist/no-modules crates/wasm",
    "wasm-build:nodejs": "wasm-pack build --target nodejs -d dist/nodejs crates/wasm",
    "wasm-build:web": "wasm-pack build --target web -d dist/web crates/wasm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likr/egraph-rs.git"
  },
  "bugs": {
    "url": "https://github.com/likr/egraph-rs/issues"
  },
  "homepage": "https://github.com/likr/egraph-rs#readme",
  "devDependencies": {
    "lerna": "^3.22.1",
    "prettier": "^2.2.1"
  },
  "private": true
}
